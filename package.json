{
  "name": "reader-api",
  "version": "1.0.0",
  "description": "This api service served to end users or third-party apps/services",
  "author": {
    "name": "Gorillab",
    "email": "hello@gorillab.co",
    "url": "https://gorillab.co/"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gorillab/reader-api.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint . --ignore-path .gitignore",
    "start": "nodemon --exec \"yarn lint && babel-node .\"",
    "mock": "NODE_ENV=mock babel-node .",
    "prebuild": "yarn run clean && yarn lint",
    "build": "babel . --out-dir dist --ignore node_modules,dist,package.json,README.md,yarn.lock --copy-files --minified",
    "serve": "node dist"
  },
  "dependencies": {
    "async": "^2.5.0",
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "gorillab-health": "^1.0.1",
    "helmet": "^3.6.1",
    "http-status": "^1.0.1",
    "include-all": "^4.0.3",
    "js-yaml": "^3.3.0",
    "lodash": "^4.17.4",
    "mongoose": "4.6.5",
    "mongoose-deep-populate": "^3.0.0",
    "mongoose-unique-validator": "1.0.2",
    "morgan": "^1.8.2",
    "passport": "0.3.2",
    "passport-facebook": "^2.1.1",
    "swagger-tools": "0.10.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-airbnb": "^2.4.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.1",
    "eslint-plugin-react": "7.1.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": [
        2,
        {
          "allow": [
            "_id",
            "__v"
          ]
        }
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "func-names": [
        "error",
        "never"
      ],
      "no-await-in-loop": 0,
      "no-restricted-syntax": [
        "error",
        "WithStatement",
        "BinaryExpression[operator='in']"
      ]
    }
  },
  "babel": {
    "presets": [
      "airbnb"
    ],
    "plugins": [
      "transform-runtime",
      "transform-regenerator"
    ]
  }
}
